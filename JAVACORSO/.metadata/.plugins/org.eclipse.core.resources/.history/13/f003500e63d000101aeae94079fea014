package com.generation.geometry;

package com.generation.geometry;

public class Rectangle
{
    private int side;
    private int height;
    private int area;
    private int perimeter;

    // Costruttore
    public Rectangle(int side, int height) {
        this.side = side;
        this.height = height;
        this.area = side * height;
        this.perimeter = 2 * (side + height);
    }

    // Getter e Setter per side
    public int getSide() {
        return side;
    }

    public void setSide(int side) {
        this.side = side;
        calcolaArea();
        calcolaPerimetro();
    }

    // Getter e Setter per height
    public int getHeight() {
        return height;
    }

    public void setHeight(int height) {
        this.height = height;
        calcolaArea();
        calcolaPerimetro();
    }

    // Getter per area (sola lettura, calcolata automaticamente)
    public int getArea() {
        return area;
    }

    // Getter per perimeter (sola lettura, calcolata automaticamente)
    public int getPerimeter() {
        return perimeter;
    }

    // Metodi privati per calcolare area e perimetro
    private void calcolaArea() {
        this.area = side * height;
    }

    private void calcolaPerimetro() {
        this.perimeter = 2 * (side + height);
    }

    @Override
    public String toString() {
        return "Rectangle{" +
                "side=" + side +
                ", height=" + height +
                ", area=" + area +
                ", perimeter=" + perimeter +
                '}';
    }
}